<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.inzimamtariq.bookmyumrah.MainPage"
    tools:showIn="@layout/activity_main_page">


    <LinearLayout
        android:id="@+id/searchB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_search"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/fab_margin">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:background="@drawable/rounded_corner">
                <LinearLayout
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1">
                        <ImageView
                            android:id="@+id/pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:background="@drawable/package_img"
                            android:layout_weight=".8"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:weightSum="1">
                            <ImageView
                                android:id="@+id/visa"
                                android:layout_weight=".25"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/img_size"
                                android:layout_marginTop="@dimen/img_margin"
                                android:background="@drawable/book"
                                android:layout_below="@+id/pic"/>
                            <ImageView
                                android:id="@+id/ticket"
                                android:layout_weight=".25"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/img_size"
                                android:layout_marginTop="@dimen/img_margin"
                                android:layout_marginStart="@dimen/img_margin"
                                android:layout_marginLeft="@dimen/img_margin"
                                android:background="@drawable/book"
                                android:layout_toRightOf="@+id/visa"
                                android:layout_toEndOf="@+id/visa"
                                android:layout_below="@+id/pic"/>
                            <ImageView
                                android:id="@+id/trans"
                                android:layout_weight=".25"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/img_size"
                                android:layout_marginTop="@dimen/img_margin"
                                android:layout_marginStart="@dimen/img_margin"
                                android:layout_marginLeft="@dimen/img_margin"
                                android:background="@drawable/book"
                                android:layout_toRightOf="@+id/ticket"
                                android:layout_toEndOf="@+id/ticket"
                                android:layout_below="@+id/pic"/>
                            <ImageView
                                android:layout_weight=".25"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/img_size"
                                android:layout_marginTop="@dimen/img_margin"
                                android:layout_marginStart="@dimen/img_margin"
                                android:layout_marginLeft="@dimen/img_margin"
                                android:background="@drawable/book"
                                android:layout_toRightOf="@+id/trans"
                                android:layout_toEndOf="@+id/trans"
                                android:layout_below="@+id/pic"/>

                        </LinearLayout>

                    </LinearLayout>




                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".7"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/img_margin">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/standard_margin"
                        android:layout_marginStart="@dimen/standard_margin">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Umrah One Week- "
                            android:id="@+id/textView"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/star_name"
                            android:textColor="@color/buttonColor"
                            android:id="@+id/textView2"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:layout_toRightOf="@+id/textView"
                            android:layout_toEndOf="@+id/textView" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AG. International Travels (pvt) Ltd"
                            android:id="@+id/textView3"
                            android:layout_below="@+id/textView"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginStart="@dimen/img_margin"
                            android:layout_marginLeft="@dimen/img_margin"
                            android:background="@color/buttonColor"
                            android:drawableRight="@drawable/ic_done_white_24dp"
                            android:text="Best Price"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:id="@+id/button"
                            android:layout_below="@+id/textView3"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginStart="@dimen/img_margin"
                            android:layout_marginLeft="@dimen/img_margin"
                            android:background="@color/buttonColor"
                            android:drawableRight="@drawable/ic_done_white_24dp"
                            android:text="BMU Selected"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:id="@+id/button2"
                            android:layout_alignTop="@+id/button"
                            android:layout_toRightOf="@+id/button"
                            android:layout_toEndOf="@+id/button"
                            android:layout_alignBottom="@+id/button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/green"
                            android:text="Budget : 8000 - 50000"
                            android:layout_marginTop="15dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:id="@+id/textView4"
                            android:layout_below="@+id/button"
                            android:layout_alignLeft="@+id/button"
                            android:layout_alignStart="@+id/button" />
                        <View
                            android:id="@+id/sep1"
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:background="@color/customColor"
                            android:layout_below="@+id/textView4"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Rating    "
                            android:id="@+id/textView5"
                            android:layout_below="@+id/sep1"
                            android:layout_alignLeft="@+id/textView4"
                            android:layout_alignStart="@+id/textView4" />
                        <ImageView
                            android:id="@+id/user"
                            android:layout_width="@dimen/user_size"
                            android:layout_height="@dimen/user_size"
                            android:layout_marginTop="@dimen/img_margin"
                            android:background="@drawable/book"
                            android:layout_toRightOf="@+id/textView5"
                            android:layout_toEndOf="@+id/textView5"
                            android:layout_below="@+id/sep1"/>
                        <TextView
                            android:id="@+id/rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/img_margin"
                            android:layout_marginStart="@dimen/img_margin"
                            android:text=" 3.0  "
                            android:layout_toRightOf="@+id/user"
                            android:layout_toEndOf="@+id/user"
                            android:layout_below="@+id/sep1"/>
                        <ImageView
                            android:id="@+id/rating1"
                            android:layout_width="@dimen/user_size"
                            android:layout_height="@dimen/user_size"
                            android:layout_marginTop="@dimen/img_margin"
                            android:background="@android:drawable/btn_star_big_on"
                            android:layout_toRightOf="@+id/rate"
                            android:layout_toEndOf="@+id/rate"
                            android:layout_below="@+id/sep1"/>
                        <ImageView
                            android:id="@+id/rating2"
                            android:layout_width="@dimen/user_size"
                            android:layout_height="@dimen/user_size"
                            android:layout_marginTop="@dimen/img_margin"
                            android:background="@android:drawable/btn_star_big_on"
                            android:layout_toRightOf="@+id/rating1"
                            android:layout_toEndOf="@+id/rating1"
                            android:layout_below="@+id/sep1"/>
                        <ImageView
                            android:id="@+id/rating3"
                            android:layout_width="@dimen/user_size"
                            android:layout_height="@dimen/user_size"
                            android:layout_marginTop="@dimen/img_margin"
                            android:background="@android:drawable/btn_star_big_on"
                            android:layout_toRightOf="@+id/rating2"
                            android:layout_toEndOf="@+id/rating2"
                            android:layout_below="@+id/sep1"/>
                        <ImageView
                            android:id="@+id/rating4"
                            android:layout_width="@dimen/user_size"
                            android:layout_height="@dimen/user_size"
                            android:layout_marginTop="@dimen/img_margin"
                            android:background="@android:drawable/btn_star_big_off"
                            android:layout_toRightOf="@+id/rating3"
                            android:layout_toEndOf="@+id/rating3"
                            android:layout_below="@+id/sep1"/>
                        <ImageView
                            android:id="@+id/rating5"
                            android:layout_width="@dimen/user_size"
                            android:layout_height="@dimen/user_size"
                            android:layout_marginTop="@dimen/img_margin"
                            android:background="@android:drawable/btn_star_big_off"
                            android:layout_toRightOf="@+id/rating4"
                            android:layout_toEndOf="@+id/rating4"
                            android:layout_below="@+id/sep1"/>

                        <View
                            android:id="@+id/sep2"
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:background="@color/customColor"
                            android:layout_below="@+id/textView5"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Expert Rating "
                            android:id="@+id/textView6"
                            android:layout_below="@+id/sep2"
                            android:layout_alignLeft="@+id/textView4"
                            android:layout_alignStart="@+id/textView4" />
                        <ImageView
                            android:id="@+id/expert"
                            android:layout_width="@dimen/user_size"
                            android:layout_height="@dimen/user_size"
                            android:layout_marginTop="@dimen/img_margin"
                            android:background="@drawable/book"
                            android:layout_toRightOf="@+id/textView6"
                            android:layout_toEndOf="@+id/textView6"
                            android:layout_below="@+id/sep2"/>
                        <TextView
                            android:id="@+id/rateEx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/img_margin"
                            android:layout_marginStart="@dimen/img_margin"
                            android:text=" 4.0  "
                            android:layout_toRightOf="@+id/expert"
                            android:layout_toEndOf="@+id/expert"
                            android:layout_below="@+id/sep2"/>
                        <ImageView
                            android:id="@+id/rating11"
                            android:layout_width="@dimen/user_size"
                            android:layout_height="@dimen/user_size"
                            android:layout_marginTop="@dimen/img_margin"
                            android:background="@android:drawable/btn_star_big_on"
                            android:layout_toRightOf="@+id/rate"
                            android:layout_toEndOf="@+id/rate"
                            android:layout_below="@+id/sep2"/>
                        <ImageView
                            android:id="@+id/rating12"
                            android:layout_width="@dimen/user_size"
                            android:layout_height="@dimen/user_size"
                            android:layout_marginTop="@dimen/img_margin"
                            android:background="@android:drawable/btn_star_big_on"
                            android:layout_toRightOf="@+id/rating1"
                            android:layout_toEndOf="@+id/rating1"
                            android:layout_below="@+id/sep2"/>
                        <ImageView
                            android:id="@+id/rating13"
                            android:layout_width="@dimen/user_size"
                            android:layout_height="@dimen/user_size"
                            android:layout_marginTop="@dimen/img_margin"
                            android:background="@android:drawable/btn_star_big_on"
                            android:layout_toRightOf="@+id/rating2"
                            android:layout_toEndOf="@+id/rating2"
                            android:layout_below="@+id/sep2"/>
                        <ImageView
                            android:id="@+id/rating14"
                            android:layout_width="@dimen/user_size"
                            android:layout_height="@dimen/user_size"
                            android:layout_marginTop="@dimen/img_margin"
                            android:background="@android:drawable/btn_star_big_on"
                            android:layout_toRightOf="@+id/rating3"
                            android:layout_toEndOf="@+id/rating3"
                            android:layout_below="@+id/sep2"/>
                        <ImageView
                            android:id="@+id/rating15"
                            android:layout_width="@dimen/user_size"
                            android:layout_height="@dimen/user_size"
                            android:layout_marginTop="@dimen/img_margin"
                            android:background="@android:drawable/btn_star_big_off"
                            android:layout_toRightOf="@+id/rating4"
                            android:layout_toEndOf="@+id/rating4"
                            android:layout_below="@+id/sep2"/>


                    </RelativeLayout>




                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>





</LinearLayout>
